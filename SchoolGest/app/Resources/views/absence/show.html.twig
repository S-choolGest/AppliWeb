{% extends 'base.html.twig' %}

{% block container %}
    <center>
        <section id="main-content">
            <h1>Details</h1>

            <table class="table table-striped table-advance table-hover">
                <hr>
                <thead>
                <a class="btn btn-round btn-default"  href="{{ path('absence_index') }}"><i class="fa fa-chevron-circle-left"></i></a>


                <a class="btn btn-round btn-warning" href="{{ path('absence_edit', { 'id': absence.id }) }}"><i class="fa fa-pencil"></i></a>

                {{ form_start(delete_form) }}
                <button class="btn btn-round btn-danger" type="submit" > <i class="fa fa-trash-o"></i>   </button>
                {{ form_end(delete_form) }}
                <br>
                <br>
                <br>
                </thead>
        <tbody>
            <tr>
                <th><span class="badge bg-primary">Id</span></th>
                <td><span class="badge bg-success">{{ absence.id }}</span></td>
            </tr>
            <tr>
                <th><span class="badge bg-primary">Matiere</span></th>
                <td><span class="badge bg-success">{{ absence.matiere.nomMatiere}}</span></td>
            </tr>
            <tr>
                <th><span class="badge bg-primary">Etat</span></th>
                <td><span class="badge bg-success">{{ absence.etat }}</span></td>
            </tr>
            <tr>
                <th><span class="badge bg-primary">Heure</span></th>
                <td><span class="badge bg-success">{% if absence.heure %}{{ absence.heure|date('h:m') }}{% endif %}</span></td>
            </tr>
            <tr>
                <th><span class="badge bg-primary">Date</span></th>
                <td><span class="badge bg-success">{% if absence.date %}{{ absence.date|date('Y-m-d') }}{% endif %}</span></td>
            </tr>
        </tbody>
    </table>


    </center>
{% endblock %}
