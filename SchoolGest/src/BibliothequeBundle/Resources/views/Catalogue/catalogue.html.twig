{% extends "base.html.twig" %}
{% block css %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <link href="{{ asset('lib/fancybox/jquery.fancybox.css') }}" rel="stylesheet" />
    <style>
        .livre {
            width: 170px;
            height: 270px;
        }
    </style>
{% endblock %}
{% block container %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i>Catalogue des livres   <a href="{{ path('add_livre') }}"><i class="fa fa-plus-square-o"></i></a></h3>
            <div class="row mt">
                <div class="col-lg-5">
                    <div class="row">
                        {% for l in livres %}
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 desc">
                                <div class="livre">
                                    <div class="photo">
                                        <a class="fancybox" href="{{ l.img }}"><img src="{{ l.img }}"
                                                                                    width="170" height="270" alt="" /></a>
                                        <div class="pr2-social centered">
                                            <a href="#" class="info_livre" id="info_livre{{ l.id }}"><i
                                                        class="fa fa-info-circle"></i></a>
                                            <a href="{{ path("edit_livre", {"id":l.id}) }}"><i
                                                        class="fa fa-edit"></i></a>
                                            <a href="#" class="delete_livre"><i class="fa fa-times-circle"></i></a>
                                            <div id="edit"></div>
                                            <div id="delete"></div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /panel -->

                                <div id="panel_info_livre{{ l.id }}" class="modal">
                                    <div class="modal-dialog">
                                        <a href="#" class="close_info"><i class="fa fa-times"></i></a>
                                        <div class="col-md-4 centered">
                                            <img src="{{ l.img }}" width="170" height="270" alt="" />
                                        </div>
                                        <div id="detail" class="col-md-4 profile-text">
                                            <h5>Titre : {{ l.titre }}</h5>
                                            <h5>Auteur : {{ l.auteur }}</h5>
                                            <h5>Editeur : {{ l.editeur }}</h5>
                                            <h5>date de sortie : {{ l.datesortie|date('d-m-Y') }}</h5>
                                            <h5>date d'ajout : {{ l.dateajout|date('d-m-Y') }}</h5>
                                            <h5>nombre de pages : {{ l.taille }}</h5>
                                            <h5>nombre d'exemplaires : {{ l.quantite }}</h5>
                                        </div>
                                    </div>
                                </div>

                                <div id="panel_edit_livre{{ l.id }}" class="modal">
                                    <div class="modal-dialog">
                                        <a href="#" class="close_info"><i class="fa fa-times"></i></a>
                                        <img src="{{ l.img }}" width="170" height="270" alt="" />
                                        <div id="detail">
                                            <p>
                                            <h5>Titre : <input class="form-control" placeholder="titre du livre" type="text"
                                                               name="titre" value="{{ l.titre }}"></h5>
                                            <h5>Auteur : <input class="form-control" placeholder="auteur du livre"
                                                                type="text" name="auteur" value="{{ l.auteur }}"></h5>
                                            <h5> Editeur : <input class="form-control" placeholder="editeur du livre"
                                                                  type="text" name="editeur" value="{{ l.editeur }}"></h5>
                                            <h5> date de sortie : <input class="form-control" type="text" name="titre"
                                                                         value="{{ l.titre }}"></h5>
                                            <h5>date d'ajout : <input class="form-control" placeholder="titre du livre"
                                                                      type="text" name="titre" value="{{ l.titre }}"></h5>
                                            <h5>nombre de pages : <input class="form-control" placeholder="titre du livre"
                                                                         type="text" name="titre" value="{{ l.titre }}"></h5>
                                            <h5>nombre d'exemplaires : <input class="" placeholder="titre du livre"
                                                                              type="text" name="titre" value="{{ l.titre }}"></h5>
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Default Datepicker</label>
                                                <div class="col-md-3 col-xs-11">
                                                    <input
                                                            class="form-control form-control-inline input-medium default-date-picker"
                                                            size="16" type="text" value="">
                                                    <span class="help-block">Select date</span>
                                                </div>
                                            </div>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- /col-lg-12 -->
            </div>
        </section>
    </section>
    <!--main content end-->
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset('lib/fancybox/jquery.fancybox.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            //    fancybox
            jQuery(".fancybox").fancybox();
        });
    </script>
    <script>
        $('.delete_livre').click(function () {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                }
            })
        });
        $('.close_info').click(function () {
            $('.modal').css('display', 'none')
        });
        $('.info_livre').click(function () {
            $('#panel_' + this.id).css('display', 'block')
        });

        $('.edit_livre').click(function () {
            $('#panel_' + this.id).css('display', 'block')
        })
    </script>
{% endblock %}