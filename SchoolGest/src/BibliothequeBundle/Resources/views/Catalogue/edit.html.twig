{% extends "base.html.twig" %}
{% block css %}
    <!-- Favicons -->
    <link href="{{ asset('img/favicon.png') }}" rel="icon">
    <link href="{{ asset('img/apple-touch-icon.png') }}" rel="apple-touch-icon">

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('lib/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <!--external css-->
    <link href="{{ asset('lib/font-awesome/css/font-awesome.css') }}" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap-fileupload/bootstrap-fileupload.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap-datepicker/css/datepicker.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap-daterangepicker/daterangepicker.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap-timepicker/compiled/timepicker.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap-datetimepicker/css/datetimepicker.css') }}" />
    <!-- Custom styles for this template -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style-responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block container %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Modifier un livre</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        {{ form_start(f, {'attr' : {'class' : 'form-horizontal style-form'}}) }}
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Titre</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.titre, {'attr' : {'class' : 'form-control', 'placeholder' : 'titre du livre', 'type' : 'text', 'name' : 'titre'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Auteur</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.auteur, {'attr' : {'class' : 'form-control', 'placeholder' : 'auteur du livre', 'type' : 'text', 'name' : 'auteur'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Editeur</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.editeur, {'attr' : {'class' : 'form-control', 'placeholder' : 'editeur du livre', 'type' : 'text', 'name' : 'editeur'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Categorie</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.categorie, {'attr' : {'class' : 'form-control', 'placeholder' : 'cat√©gorie du livre', 'type' : 'text', 'name' : 'categorie'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Date de sortie</label>
                            <div class="col-md-3 col-xs-11">
                                {{ form_widget(f.datesortie, {'attr' : {'class' : 'form-control form-control-inline input-medium default-date-picker', 'size' : '16', 'type' : 'text', 'name' : 'datesortie', 'value' : ''} }) }}
                                <span class="help-block">Select date</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Nombre de pages</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.taille, {'attr' : {'class' : 'form-control', 'placeholder' : 'Nombre de pages', 'type' : 'number', 'name' : 'taille'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Nombre d' exemplaires</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.quantite, {'attr' : {'class' : 'form-control', 'placeholder' : 'Nombre d exemplaires', 'type' : 'number', 'name' : 'quantite'} }) }}
                            </div>
                        </div>
                        {{ form_widget(f.dateajout, {'attr' : {'class':'form-control form-control-inline input-medium default-date-picker', 'type':'text', 'value': "now"|date("m/d/Y")}})
                        }}
                        {{ form_widget(f.idBibliotheque, {'attr' : {}}) }}
                        <div class="form-group last">
                            <label class="control-label col-md-3">photo de couverture</label>
                            <div class="col-md-9">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                        <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists thumbnail"
                                         style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                    <div>
                                    <span class="btn btn-theme02 btn-file">
                                        <span class="fileupload-new"><i class="fa fa-paperclip"></i> Selectionner une
                                            image</span>
                                        <span class="fileupload-exists"><i class="fa fa-undo"></i> Changer</span>
                                        {{ form_widget(f.img, {'attr' : {'class' : 'default', 'type' : 'file', 'name' : 'img'} }) }}
                                    </span>
                                        <a href="#" class="btn btn-theme04 fileupload-exists" data-dismiss="fileupload"><i
                                                    class="fa fa-trash-o"></i> supprimer</a>
                                    </div>
                                </div>
                                <span class="label label-info">NOTE!</span>
                                <span>
                                Attached image thumbnail is
                                supported in Latest Firefox, Chrome, Opera,
                                Safari and Internet Explorer 10 only
                            </span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-theme02"><i class="fa fa-check"></i> Valider</button>
                        {{ form_end(f) }}
                    </div>
                    <!-- /form-panel -->
                </div>
                <!-- /col-lg-12 -->
            </div>
        </section>
    </section>
    <!--main content end-->
{% endblock %}
{% block js %}
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="{{ asset('lib/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('lib/bootstrap/js/bootstrap.min.js') }}"></script>
    <script class="include" type="text/javascript" src="{{ asset('lib/jquery.dcjqaccordion.2.7.js') }}"></script>
    <script src="{{ asset('lib/jquery.scrollTo.min.js') }}"></script>
    <script src="{{ asset('lib/jquery.nicescroll.js') }}" type="text/javascript"></script>
    <!--common script for all pages-->
    <script src="{{ asset('lib/common-scripts.js') }}"></script>
    <!--script for this page-->
    <script src="{{ asset('lib/jquery-ui-1.9.2.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-fileupload/bootstrap-fileupload.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-daterangepicker/date.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-daterangepicker/daterangepicker.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-daterangepicker/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-timepicker/js/bootstrap-timepicker.js') }}"></script>
    <script src="{{ asset('lib/advanced-form-components.js') }}"></script>
{% endblock %}