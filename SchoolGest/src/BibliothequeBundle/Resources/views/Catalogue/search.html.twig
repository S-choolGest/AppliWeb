{% extends "base.html.twig" %}
{% block css %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <link href="{{ asset('lib/fancybox/jquery.fancybox.css') }}" rel="stylesheet" />
    <style>
        .livre {
            width: 170px;
            height: 270px;
        }
    </style>
{% endblock %}
{% block container %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i>Catalogue des livres   <a href="{{ path('add_livre') }}"><i class="fa fa-plus-square-o"></i></a></h3>
                    <div class="row" id="catalogue">
                        {% for l in livres %}
                            <div id="div{{ l.id }}">
                            <div class="col-lg-2 col-sm-6 col-md-3 col-6 col-xl-2 mb">
                                <div class="livre">
                                    <div class="photo">
                                        <a class="fancybox" href="{{ asset('upload/uploads/'~l.img) }}"><img src="{{ asset('upload/uploads/'~l.img) }}"
                                                                                    width="170" height="240" alt="" /></a>
                                        <div class="pr2-social centered">
                                            <a href="#" data-toggle="modal" data-target="#panel_info_livre{{ l.id }}"><i
                                                        class="fa fa-info-circle"></i></a>
                                            <a href="{{ path("edit_livre", {"id":l.id}) }}"><i
                                                        class="fa fa-edit"></i></a>
                                            <a href="#" id="{{ l.id }}" class="delete_livre"><i class="fa fa-times-circle"></i></a>
                                            <div id="edit"></div>
                                            <div id="delete"></div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /panel -->
                            </div>

                                <div id="panel_info_livre{{ l.id }}" class="modal fade">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h4 class="modal-title" id="myModalLabel">détail du livre</h4>
                                            </div>
                                            <div class="modal-footer">
                                        <div class="col-md-4 centered">
                                            <img src="{{ asset('upload/uploads/'~l.img) }}" width="170" height="270" alt="" />
                                        </div>
                                        <div id="detail" class="text-left">
                                            <p class="text-left">
                                            <h5>Titre : {{ l.titre }}</h5>
                                            <h5>Auteur : {{ l.auteur }}</h5>
                                            <h5>Editeur : {{ l.editeur }}</h5>
                                            <h5>date de sortie : {{ l.datesortie|date('d-m-Y') }}</h5>
                                            <h5>date d'ajout : {{ l.dateajout|date('d-m-Y') }}</h5>
                                            <h5>nombre de pages : {{ l.taille }}</h5>
                                            <h5>nombre d'exemplaires : {{ l.quantite }}</h5>
                                            </p>
                                        </div>
                                            </div>
                                    </div>
                                    </div>
                                </div>

                                <div id="panel_edit_livre{{ l.id }}" class="modal">
                                    <div class="modal-dialog">
                                        <a href="#" class="close_info"><i class="fa fa-times"></i></a>
                                        <img src="{{ asset('upload/uploads/'~l.img) }}" width="170" height="270" alt="" />
                                        <div id="detail">
                                            <p>
                                            <h5>Titre : <input class="form-control" placeholder="titre du livre" type="text"
                                                               name="titre" value="{{ l.titre }}"></h5>
                                            <h5>Auteur : <input class="form-control" placeholder="auteur du livre"
                                                                type="text" name="auteur" value="{{ l.auteur }}"></h5>
                                            <h5> Editeur : <input class="form-control" placeholder="editeur du livre"
                                                                  type="text" name="editeur" value="{{ l.editeur }}"></h5>
                                            <h5> date de sortie : <input class="form-control" type="text" name="titre"
                                                                         value="{{ l.titre }}"></h5>
                                            <h5>date d'ajout : <input class="form-control" placeholder="titre du livre"
                                                                      type="text" name="titre" value="{{ l.titre }}"></h5>
                                            <h5>nombre de pages : <input class="form-control" placeholder="titre du livre"
                                                                         type="text" name="titre" value="{{ l.titre }}"></h5>
                                            <h5>nombre d'exemplaires : <input class="" placeholder="titre du livre"
                                                                              type="text" name="titre" value="{{ l.titre }}"></h5>
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Default Datepicker</label>
                                                <div class="col-md-3 col-xs-11">
                                                    <input
                                                            class="form-control form-control-inline input-medium default-date-picker"
                                                            size="16" type="text" value="">
                                                    <span class="help-block">Select date</span>
                                                </div>
                                            </div>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
        </section>
    </section>
    <!--main content end-->
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset('lib/fancybox/jquery.fancybox.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            //    fancybox
            jQuery(".fancybox").fancybox();
        });
    </script>
    <script>
        $('.delete_livre').click(function () {
            var id = this.id;
            Swal.fire({
                title: 'Etes-vous sûre?',
                text: "Cette action est irréversible!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui, supprimer!'
            }).then((result) => {
                if (result.value) {
                    var url = Routing.generate('delete_livre', {id: this.id}, true);
                    /*url = "{{ path('delete_livre', {"id" : 'livre_id'}) }}";
                    url = url.replace("livre_id", this.id);*/
                    //document.location.href = url;
                    $.ajax({
                        url: url,
                        type: "POST",
                        dataType: "json",
                        data: {
                            "idSelect": this.id
                        },
                        async: true,
                        success: function (data) {
                            $('#div'+id).remove();
                            //$('#catalogue').load(' #catalogue');
                            Swal.fire(
                                'Supprimé!',
                                'Le livre a été supprimé.',
                                'success'
                            );
                        },
                        error: function () {
                            Swal.fire(
                                'Echec!',
                                'Impossible de supprimer ce livre.',
                                'error'
                            );
                        }
                    });
                }
            })
        });
        $('.close_info').click(function () {
            $('.modal').css('display', 'none')
        });
        $('.info_livre').click(function () {
            $('#panel_' + this.id).css('display', 'block')
        });

        $('.edit_livre').click(function () {
            $('#panel_' + this.id).css('display', 'block')
        })
    </script>
{% endblock %}