{% extends 'base.html.twig' %}

{% block container %}
    <center>
    <h1>Classes list</h1>

    <table id="myTable">
        <thead>
            <tr>
                <th>Idclasse</th>
                <th>Nomclasse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td><a href="{{ path('classe_show', { 'idClasse': classe.idClasse }) }}">{{ classe.idClasse }}</a></td>
                <td>{{ classe.nomClasse }}</td>
                <td>
                    <ul>

                        <li>
                            <a href="{{ path('classe_edit', { 'idClasse': classe.idClasse }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('classe_new') }}">Create a new classe</a>
        </li>
    </ul>
        <form class="navbar-form">
            <th> <input type="text" id="myInput" placeholder="Research  ..."></th>



            </button>

        </form>



        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>
            $(document).ready(function(){
                $("#myInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </center>
{% endblock %}
